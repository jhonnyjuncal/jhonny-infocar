<FrameLayout 
    android:id="@+id/fragment_datos"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jhonny.infocar.fragments.DatosFragment" >
    
    <ImageView
        android:id="@+id/fondo_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/fondo1" />
		
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
		
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignBaseline="@id/textView1"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="5dp"
	        android:layout_toRightOf="@id/textView1"
	        android:gravity="center_vertical"
	        android:text="@string/lbl_marca" />
			
	    <Spinner
	        android:id="@+id/nue_veh_spinner1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textView1"
	        android:layout_alignTop="@+id/textView1"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/textView1" />
			
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView1"
	        android:layout_below="@+id/textView1"
	        android:layout_marginTop="15dp"
	        android:text="@string/lbl_modelo" />
			
	    <EditText
	        android:id="@+id/nue_veh_editText1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textView2"
	        android:layout_alignBottom="@+id/textView2"
	        android:layout_alignParentRight="true"
	        android:layout_alignRight="@+id/textView2"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/textView2"
	        android:inputType="text"
	        android:ems="10" >
			
	        <requestFocus />
	    </EditText>
		
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView2"
	        android:layout_below="@+id/nue_veh_editText1"
	        android:layout_marginTop="22dp"
	        android:text="@string/lbl_kms" />
			
	    <EditText
	        android:id="@+id/nue_veh_editText2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textView3"
	        android:layout_alignBottom="@+id/textView3"
	        android:layout_alignParentRight="true"
	        android:layout_alignRight="@+id/textView3"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/textView3"
	        android:ems="10"
	        android:inputType="number" />
			
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView3"
	        android:layout_below="@+id/nue_veh_editText2"
	        android:layout_marginTop="22dp"
	        android:text="@string/lbl_compra" />
			
	    <EditText
	        android:id="@+id/nue_veh_editText3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textView4"
	        android:layout_alignBottom="@+id/textView4"
	        android:layout_alignParentRight="true"
	        android:layout_alignRight="@+id/textView4"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/textView4"
	        android:ems="10"
	        android:inputType="date" />
			
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignLeft="@+id/textView4"
	        android:layout_below="@+id/nue_veh_editText3"
	        android:layout_marginTop="22dp"
	        android:gravity="center_vertical"
	        android:text="@string/lbl_tipo" />
			
	    <Spinner
	        android:id="@+id/nue_veh_spinner2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textView5"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/textView5"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/textView5" />
			
	    <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignLeft="@+id/textView5"
	        android:layout_below="@+id/textView5"
	        android:layout_marginTop="20dp"
	        android:gravity="center_vertical"
	        android:text="@string/lbl_combustible" />
			
	    <Spinner
	        android:id="@+id/nue_veh_spinner3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textView6"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/textView6"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/textView6" />
			
	    <Button
	        android:id="@+id/btn_nuevo_veh"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_above="@+id/linearLayout2"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="20dp"
	        android:layout_marginRight="15dp"
	        android:text="@string/boton_guardar" />
			
	    <Button
	        android:id="@+id/btn_nuevo_despues"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignBaseline="@+id/btn_nuevo_veh"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="15dp"
	        android:text="@string/boton_guardar_desp" />
			
	    <LinearLayout
			android:id="@+id/linearLayout2"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_alignParentBottom="true"
			android:orientation="vertical"
			android:weightSum="1">
		</LinearLayout>
		
	</RelativeLayout>
	
</FrameLayout>